---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🛰️ <strong>Geolocalización Avanzada:</strong> Triangulación de señales, análisis de metadatos GPS y rastreo de dispositivos",
  "📱 <strong>OSINT de Redes Sociales:</strong> Monitoreo de actividad digital, check-ins y patrones de comportamiento online",
  "🧠 <strong>Análisis Predictivo:</strong> Modelado de patrones de movilidad y predicción de ubicaciones futuras",
  "🌐 <strong>Red de Fuentes Humanas:</strong> Informantes especializados y contactos en campo a nivel internacional",
  "📊 <strong>Reporte Operativo:</strong> Documentación completa del proceso con evidencia georreferenciada y timeline detallado"
];

const description = "Empleamos una metodología híbrida que combina técnicas OSINT de última generación con trabajo de campo tradicional. Nuestros operadores utilizan herramientas de geolocalización militar, análisis de big data y una red global de fuentes humanas para localizar personas que otros consideran 'imposibles de encontrar'.";
---

<Layout 
  title="🎯 Rastreo y Localización Táctica | PDC [private detection & ciberintelligence]"
  description="Localización profesional de personas: geolocalización avanzada, OSINT especializado y red global de operadores. Resultados donde otros fallan."
>
  <Header />
  <Breadcrumbs current="Rastreo y localización táctica" />
  <ServiceHero 
    icon="📍"
    title="Rastreo y Localización Táctica"
    description="<strong>Encontramos a cualquier persona, en cualquier lugar</strong> del mundo.<br>🛰️ <em>Geolocalización militar</em> • 🌐 <em>Red global de operadores</em>"
    iconLabel="Localización y rastreo"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>