---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "Rastreos digitales y geolocalización.",
  "Seguimiento en redes sociales y plataformas digitales.",
  "Análisis de patrones de movilidad y contactos.",
  "Colaboración con expertos en campo y red de informantes.",
  "Reporte detallado del proceso y hallazgos."
];

const description = "Aplicamos métodos de investigación digital y tradicional para localizar personas desaparecidas, deudores o familiares, siempre con la máxima discreción y respeto.";
---

<Layout 
  title="Localización de personas | PDC [private detection & ciberintelligence]"
  description="Localización avanzada de personas por PDC: rastreos digitales, análisis y seguimiento. Confidencialidad total."
>
  <Header />
  <Breadcrumbs current="Localización de personas" />
  <ServiceHero 
    icon="&#128205;"
    title="Localización de personas"
    description="Rastreos avanzados y seguimiento digital para ubicar a quien buscas.<br>Confidencialidad total."
    iconLabel="Ubicación"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>