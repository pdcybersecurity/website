---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🛰️ <strong>Geolocalización Avanzada:</strong> Triangulación de señales, análisis de metadatos GPS y rastreo de dispositivos",
  "📱 <strong>OSINT de Redes Sociales:</strong> Monitoreo de actividad digital, check-ins y patrones de comportamiento online",
  "🧠 <strong>Análisis Predictivo:</strong> Modelado de patrones de movilidad y predicción de ubicaciones futuras",
  "🌐 <strong>Red de Contactos:</strong> Fuentes especializadas y contactos en campo a nivel internacional",
  "📊 <strong>Reporte Detallado:</strong> Documentación completa del proceso con evidencia georreferenciada y timeline"
];

const description = "Empleamos una metodología híbrida que combina técnicas OSINT de alta tecnología con trabajo de campo tradicional. Nuestros especialistas utilizan herramientas de geolocalización avanzada, análisis de big data y una red global de contactos para localizar personas que otros consideran imposibles de encontrar.";
---

<Layout 
  title="🎯 Localización de Personas Avanzada | PDC [private detection & ciberintelligence]"
  description="Localización profesional de personas: geolocalización avanzada, OSINT especializado y red global de especialistas. Resultados donde otros fallan."
>
  <Header />
  <Breadcrumbs current="Localización de personas" />
  <ServiceHero 
    icon="📍"
    title="Localización de Personas Avanzada"
    description="<strong>Encontramos a quien buscas</strong> con tecnología de vanguardia.<br>🛰️ <em>Geolocalización profesional</em> • 🌐 <em>Red global de especialistas</em>"
    iconLabel="Localización y rastreo"
    serviceClass="localizacion"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>