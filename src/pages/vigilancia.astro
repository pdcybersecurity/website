---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👁️ Vigilancia física profesional y seguimiento de objetivos 24/7",
  "💻 Monitoreo digital avanzado de actividad online y dispositivos",
  "🔧 Instalación de sistemas de observación y alarmas inteligentes",
  "🧠 Análisis de patrones de comportamiento y detección de anomalías",
  "📱 Informes en tiempo real y evidencias documentadas legalmente"
];

const description = "Nuestro servicio de vigilancia elite combina técnicas tradicionales de campo con tecnología de monitoreo digital de última generación. Garantizamos seguridad total y control absoluto de la situación, adaptándonos a cada caso específico con la máxima confidencialidad y profesionalismo.";
---

<Layout 
  title="👁️ Vigilancia Física y Digital Elite | PDC [private detection & ciberintelligence]"
  description="Vigilancia profesional 24/7: monitoreo discreto físico y digital, análisis de comportamiento, tecnología avanzada y evidencia legal."
>
  <Header />
  <Breadcrumbs current="Vigilancia física y digital" />
  <ServiceHero 
    icon="🎥"
    title="Vigilancia Física y Digital Elite"
    description="<strong>Control total de la situación</strong> con monitoreo 24/7.<br>👁️ <em>Vigilancia discreta profesional</em> • 📊 <em>Análisis en tiempo real</em>"
    iconLabel="Vigilancia y monitoreo"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>