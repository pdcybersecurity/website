---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👁️ <strong>Vigilancia Física Discreta:</strong> Seguimiento profesional con equipos especializados y vehículos no marcados",
  "💻 <strong>Monitoreo Digital 24/7:</strong> Vigilancia de actividad online, comunicaciones y movimientos digitales",
  "🔧 <strong>Tecnología de Observación:</strong> Cámaras ocultas, dispositivos de rastreo y sistemas de alerta temprana",
  "🧠 <strong>Análisis Comportamental:</strong> Perfilado de patrones, detección de anomalías y predicción de acciones",
  "📱 <strong>Reportes en Tiempo Real:</strong> Actualizaciones inmediatas con evidencia fotográfica y video de calidad legal"
];

const description = "Nuestros operadores de vigilancia son ex-militares y ex-agentes con entrenamiento en técnicas de contravigilancia y seguimiento discreto. Utilizamos tecnología de grado militar combinada con métodos tradicionales de campo para mantener observación continua sin ser detectados, garantizando evidencia admisible en cualquier proceso legal.";
---

<Layout 
  title="👁️ Vigilancia Operativa 24/7 | PDC [private detection & ciberintelligence]"
  description="Vigilancia profesional física y digital: seguimiento discreto, monitoreo continuo y evidencia legal. Operadores especializados ex-militares."
>
  <Header />
  <Breadcrumbs current="Vigilancia operativa 24/7" />
  <ServiceHero 
    icon="🎥"
    title="Vigilancia Operativa 24/7"
    description="<strong>Control total del campo de operaciones</strong> con vigilancia militar.<br>👁️ <em>Seguimiento discreto profesional</em> • 📊 <em>Evidencia admisible en tribunales</em>"
    iconLabel="Vigilancia y monitoreo"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>