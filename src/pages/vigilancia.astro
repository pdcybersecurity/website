---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "Vigilancia física en campo y seguimiento de objetivos.",
  "Monitoreo digital de actividad online y dispositivos.",
  "Instalación de sistemas de observación y alarmas.",
  "Análisis de patrones y detección de anomalías.",
  "Informes en tiempo real y evidencias documentadas."
];

const description = "Combinamos técnicas tradicionales y digitales para garantizar seguridad y control, adaptándonos a cada caso con la máxima confidencialidad.";
---

<Layout 
  title="Vigilancia física y digital | PDC [private detection & ciberintelligence]"
  description="Vigilancia física y digital profesional: monitoreo discreto, análisis de actividad, experiencia y tecnología."
>
  <Header />
  <Breadcrumbs current="Vigilancia física y digital" />
  <ServiceHero 
    icon="&#128064;"
    title="Vigilancia física y digital"
    description="Monitorización discreta y análisis de actividad en tiempo real.<br>Experiencia y tecnología."
    iconLabel="Vigilancia"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>