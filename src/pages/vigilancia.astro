---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👁️ <strong>Vigilancia Física Discreta:</strong> Seguimiento profesional con equipos especializados y vehículos no identificados",
  "💻 <strong>Monitoreo Digital 24/7:</strong> Vigilancia de actividad online, comunicaciones y movimientos digitales",
  "🔧 <strong>Tecnología de Observación:</strong> Cámaras ocultas, dispositivos de rastreo y sistemas de alerta temprana",
  "🧠 <strong>Análisis Comportamental:</strong> Perfilado de patrones, detección de anomalías y predicción de acciones",
  "📱 <strong>Reportes en Tiempo Real:</strong> Actualizaciones inmediatas con evidencia fotográfica y video de calidad legal"
];

const description = "Nuestros especialistas en vigilancia combinan experiencia en campo con tecnología de alta gama para mantener observación continua sin ser detectados. Utilizamos métodos tradicionales de seguimiento junto con herramientas digitales avanzadas, garantizando evidencia admisible en cualquier proceso legal.";
---

<Layout 
  title="👁️ Vigilancia Física y Digital Elite | PDC [private detection & ciberintelligence]"
  description="Vigilancia profesional 24/7: monitoreo discreto físico y digital, análisis de comportamiento, tecnología avanzada y evidencia legal."
>
  <Header />
  <Breadcrumbs current="Vigilancia física y digital" />
  <ServiceHero 
    icon="🎥"
    title="Vigilancia Física y Digital Elite"
    description="<strong>Control total de la situación</strong> con monitoreo 24/7.<br>👁️ <em>Vigilancia discreta profesional</em> • 📊 <em>Evidencia admisible legalmente</em>"
    iconLabel="Vigilancia y monitoreo"
    serviceClass="vigilancia"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>