---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🛡️ <strong>Análisis de Amenazas:</strong> Evaluación de riesgos internos/externos, perfilado de amenazas y análisis de vulnerabilidades",
  "🔒 <strong>Protección Corporativa:</strong> Detección de espionaje industrial, fugas de información y sabotaje empresarial",
  "🏆 <strong>Protección Reputacional:</strong> Monitoreo de amenazas digitales, gestión de crisis y blindaje de imagen corporativa",
  "🕵️ <strong>Due Diligence Avanzado:</strong> Investigación exhaustiva de socios, proveedores y personal clave con metodología especializada",
  "📋 <strong>Compliance y Auditoría:</strong> Verificación de protocolos de seguridad, evaluación de riesgos y asesoría estratégica"
];

const description = "Ofrecemos servicios de protección corporativa utilizando técnicas especializadas de contrainteligencia. Nuestros analistas protegen activos críticos de su organización mediante metodologías proactivas que anticipan y neutralizan amenazas antes de que se materialicen, garantizando la continuidad del negocio.";
---

<Layout 
  title="💼 Protección Corporativa Elite | PDC [private detection & ciberintelligence]"
  description="Protección corporativa especializada: contrainteligencia, due diligence avanzado y análisis de amenazas. Metodología profesional."
>
  <Header />
  <Breadcrumbs current="Protección corporativa" />
  <ServiceHero 
    icon=""
    title="Protección Corporativa Elite"
    description="<strong>Blindaje empresarial integral</strong> para tu organización.<br>🛡️ <em>Protección avanzada</em> • 🎯 <em>Neutralización proactiva de amenazas</em>"
    iconLabel="Protección empresarial"
    serviceClass="corporativo"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>