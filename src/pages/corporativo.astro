---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🛡️ <strong>Análisis de Amenazas Integrales:</strong> Evaluación de riesgos internos/externos, perfilado de amenazas y análisis de vulnerabilidades",
  "🔒 <strong>Contrainteligencia Corporativa:</strong> Detección de espionaje industrial, fugas de información y sabotaje empresarial",
  "🏆 <strong>Protección Reputacional:</strong> Monitoreo de amenazas digitales, gestión de crisis y blindaje de imagen corporativa",
  "🕵️ <strong>Due Diligence Avanzado:</strong> Investigación exhaustiva de socios, proveedores y personal clave con metodología forense",
  "📋 <strong>Compliance y Auditoría:</strong> Verificación de protocolos de seguridad, evaluación de riesgos y asesoría estratégica"
];

const description = "Ofrecemos servicios de contrainteligencia corporativa utilizando técnicas empleadas por agencias de seguridad nacional. Nuestros analistas, con experiencia en inteligencia militar y corporativa, protegen activos críticos de su organización mediante metodologías proactivas que anticipan y neutralizan amenazas antes de que se materialicen.";
---

<Layout 
  title="💼 Contrainteligencia Corporativa | PDC [private detection & ciberintelligence]"
  description="Protección corporativa especializada: contrainteligencia, due diligence avanzado y análisis de amenazas. Metodología de agencias gubernamentales."
>
  <Header />
  <Breadcrumbs current="Contrainteligencia corporativa" />
  <ServiceHero 
    icon="🏢"
    title="Contrainteligencia Corporativa"
    description="<strong>Protección integral de activos empresariales</strong> con técnicas militares.<br>🛡️ <em>Contrainteligencia avanzada</em> • 🎯 <em>Neutralización proactiva de amenazas</em>"
    iconLabel="Protección empresarial"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>