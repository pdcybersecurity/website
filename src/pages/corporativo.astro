---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🛡️ Análisis integral de amenazas internas y externas a tu organización",
  "🔒 Prevención y detección avanzada de fugas de información confidencial",
  "🏆 Protección blindada de la reputación digital y física corporativa",
  "🕵️ Investigación especializada de fraudes internos y sabotaje empresarial",
  "📋 Asesoría estratégica en protocolos de compliance y seguridad corporativa"
];

const description = "Ofrecemos soluciones integrales de protección corporativa a empresas líderes, actuando con velocidad quirúrgica y sigilo absoluto para preservar la integridad, reputación y valor estratégico de tu organización. Nuestro enfoque proactivo previene crisis antes de que ocurran.";
---

<Layout 
  title="💼 Protección Corporativa Elite | PDC [private detection & ciberintelligence]"
  description="Casos corporativos especializados: Protección reputacional, compliance avanzado, análisis de amenazas y blindaje empresarial integral."
>
  <Header />
  <Breadcrumbs current="Casos corporativos" />
  <ServiceHero 
    icon="🏢"
    title="Protección Corporativa Elite"
    description="<strong>Blindaje empresarial completo</strong> para tu organización.<br>🛡️ <em>Protección reputacional avanzada</em> • 🎯 <em>Prevención de crisis</em>"
    iconLabel="Protección empresarial"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>