---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🔍 Verificación exhaustiva de antecedentes personales y laborales",
  "🕸️ Detección de relaciones y vínculos ocultos que otros no encuentran",
  "⚖️ Revisión completa de historial legal y reputacional",
  "🌐 Acceso exclusivo a fuentes abiertas y bases de datos especializadas",
  "📋 Informe ejecutivo personalizado para decisiones estratégicas"
];

const description = "Nuestro equipo elite de ciberinteligencia te entrega un análisis forense completo, empleando técnicas OSINT avanzadas y herramientas de última generación para descubrir información crítica que puede cambiar el rumbo de tus decisiones. Operamos con total discreción y máxima eficiencia.";
---

<Layout 
  title="🔍 Investigación de Antecedentes Elite | PDC [private detection & ciberintelligence]"
  description="Investigación de antecedentes profesional: análisis profundo de datos y conexiones ocultas. Confidencialidad absoluta y resultados verificables por PDC."
>
  <Header />
  <Breadcrumbs current="Investigación de antecedentes" />
  <ServiceHero 
    icon="🕵️‍♂️"
    title="Investigación de Antecedentes Elite"
    description="<strong>Descubre la verdad completa</strong> sobre cualquier persona.<br>🎯 <em>Análisis forense de datos y conexiones ocultas</em> • 🔒 <em>Confidencialidad blindada</em>"
    iconLabel="Investigación de identidad"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>