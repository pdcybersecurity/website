---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "Verificación de antecedentes personales y laborales.",
  "Detección de relaciones y vínculos ocultos.",
  "Revisión de historial legal y reputacional.",
  "Acceso a fuentes abiertas y bases especializadas.",
  "Informe personalizado para toma de decisiones."
];

const description = "Nuestro equipo de ciberinteligencia te ofrece un análisis detallado, empleando técnicas OSINT y herramientas avanzadas para descubrir información relevante, siempre con total discreción.";
---

<Layout 
  title="Investigación de antecedentes | PDC [private detection & ciberintelligence]"
  description="Investigación de antecedentes a medida: análisis profundo de datos y conexiones. Confidencialidad y rigor por PDC."
>
  <Header />
  <Breadcrumbs current="Investigación de antecedentes" />
  <ServiceHero 
    icon="&#128100;"
    title="Investigación de antecedentes"
    description="Analizamos datos clave y conexiones ocultas para entregarte la verdad completa.<br>Confidencialidad absoluta."
    iconLabel="Identidad"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>