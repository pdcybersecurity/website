---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🔍 <strong>OSINT Profundo:</strong> Análisis exhaustivo de huella digital en surface web, deep web y fuentes especializadas",
  "🕸️ <strong>Mapeo de Relaciones:</strong> Reconstrucción de redes de contactos, asociaciones ocultas y vínculos financieros",
  "⚖️ <strong>Verificación Legal:</strong> Búsqueda en registros judiciales, antecedentes penales y historial crediticio",
  "🌐 <strong>Footprinting Digital:</strong> Análisis de metadatos, geolocalización histórica y patrones de comportamiento online",
  "📋 <strong>Informe de Inteligencia:</strong> Dossier ejecutivo con evidencia verificable y recomendaciones estratégicas"
];

const description = "Nuestro equipo de analistas OSINT emplea técnicas de inteligencia de fuentes abiertas utilizadas por agencias especializadas. Combinamos herramientas automatizadas de última generación con análisis humano especializado para crear un perfil completo que revela información crítica invisible para investigadores convencionales.";
---

<Layout 
  title="🔍 Perfilado de Identidad Completo | PDC [private detection & ciberintelligence]"
  description="Investigación de antecedentes profesional: OSINT profundo, análisis de metadatos y reconstrucción de identidad digital. Metodología científica certificada."
>
  <Header />
  <Breadcrumbs current="Perfilado de identidad completo" />
  <ServiceHero 
    icon="🕵️‍♂️"
    title="Perfilado de Identidad Completo"
    description="<strong>Radiografía completa del objetivo</strong> con técnicas OSINT avanzadas.<br>🔬 <em>Análisis especializado de huella digital</em> • 🎯 <em>Inteligencia accionable verificada</em>"
    iconLabel="Investigación de identidad"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>