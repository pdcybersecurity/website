---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🔍 <strong>Investigación de Siniestros:</strong> Análisis técnico especializado con metodología científica y tecnología avanzada",
  "💾 <strong>Recolección de Evidencia Digital:</strong> Recuperación de datos, análisis de dispositivos y preservación de evidencia electrónica",
  "🧪 <strong>Análisis Documental:</strong> Verificación de autenticidad, detección de alteraciones y análisis especializado",
  "🎯 <strong>Trabajo de Campo:</strong> Entrevistas estratégicas, inspecciones técnicas y seguimiento de sospechosos",
  "📋 <strong>Informe Pericial:</strong> Documentación ejecutiva con validez legal para instancias judiciales y aseguradoras"
];

const description = "Nuestro equipo anti-fraude cuenta con experiencia especializada en detección de fraudes complejos y tecnología de vanguardia. Empleamos técnicas de investigación adaptadas al sector asegurador, garantizando evidencia sólida que resiste cualquier escrutinio legal y genera ahorros significativos para nuestros clientes.";
---

<Layout 
  title="🛡️ Investigación Anti-Fraude Especializada | PDC [private detection & ciberintelligence]"
  description="Detección profesional de fraudes de seguros: análisis especializado, evidencia digital y reportes periciales. Protege tus intereses."
>
  <Header />
  <Breadcrumbs current="Investigación anti-fraude" />
  <ServiceHero 
    icon=""
    title="Investigación Anti-Fraude Especializada"
    description="<strong>Protege tus intereses</strong> con evidencia irrefutable.<br>🔬 <em>Análisis especializado</em> • ⚖️ <em>Evidencia con validez legal</em>"
    iconLabel="Justicia y protección"
    serviceClass="fraudes"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>