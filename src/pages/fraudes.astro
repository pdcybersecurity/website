---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🔍 Investigación forense de siniestros sospechosos con tecnología avanzada",
  "💾 Recolección de evidencia física y digital con validez legal",
  "🧪 Análisis forense especializado de documentos y dispositivos electrónicos",
  "🎯 Entrevistas estratégicas e inspecciones de campo especializadas",
  "📋 Informe pericial ejecutivo para instancias legales y aseguradoras"
];

const description = "Nuestro equipo especializado en fraudes cuenta con experiencia forense internacional y tecnología de vanguardia para detectar, documentar y demostrar fraudes en seguros de todo tipo. Garantizamos la integridad absoluta de la investigación y evidencia que resiste cualquier escrutinio legal.";
---

<Layout 
  title="🛡️ Investigación de Fraudes de Seguros | PDC [private detection & ciberintelligence]"
  description="Detección profesional de fraudes de seguros: evidencia forense sólida, análisis especializado y reportes periciales. Protege tus intereses."
>
  <Header />
  <Breadcrumbs current="Fraudes de seguros" />
  <ServiceHero 
    icon="⚖️"
    title="Detección de Fraudes de Seguros"
    description="<strong>Protege tus intereses</strong> con evidencia irrefutable.<br>🔬 <em>Análisis forense especializado</em> • ⚖️ <em>Evidencia con validez legal</em>"
    iconLabel="Justicia y protección"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>