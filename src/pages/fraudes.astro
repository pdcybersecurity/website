---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "Investigación de siniestros sospechosos.",
  "Recolección de evidencia física y digital.",
  "Análisis forense de documentos y dispositivos.",
  "Entrevistas e inspecciones de campo.",
  "Informe pericial para instancias legales."
];

const description = "Nuestro equipo cuenta con experiencia forense y tecnológica para detectar, documentar y demostrar fraudes en seguros de todo tipo. Garantizamos la integridad de la investigación.";
---

<Layout 
  title="Fraudes de seguros | PDC [private detection & ciberintelligence]"
  description="Investigación de fraudes de seguros: pruebas sólidas, análisis forense y reporte profesional."
>
  <Header />
  <Breadcrumbs current="Fraudes de seguros" />
  <ServiceHero 
    icon="&#9878;"
    title="Fraudes de seguros"
    description="Descubrimos fraudes con pruebas sólidas y evidencia digital forense.<br>Rigor y confidencialidad."
    iconLabel="Justicia"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>