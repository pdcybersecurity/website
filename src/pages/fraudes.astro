---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🔍 <strong>Investigación Forense de Siniestros:</strong> Análisis técnico especializado con metodología científica y tecnología avanzada",
  "💾 <strong>Recolección de Evidencia Digital:</strong> Recuperación de datos, análisis de dispositivos y preservación de evidencia electrónica",
  "🧪 <strong>Análisis Forense Documental:</strong> Verificación de autenticidad, detección de alteraciones y análisis grafológico",
  "🎯 <strong>Operaciones de Campo:</strong> Entrevistas especializadas, inspecciones técnicas y contravigilancia de sospechosos",
  "📋 <strong>Peritaje Legal:</strong> Informes periciales con validez judicial y testimonio experto en procedimientos legales"
];

const description = "Nuestro equipo anti-fraude está compuesto por ex-investigadores de seguros, peritos forenses y analistas especializados en detección de fraudes complejos. Empleamos técnicas de investigación criminal adaptadas al sector asegurador, garantizando evidencia sólida que resiste cualquier impugnación legal y genera ahorros significativos para nuestros clientes.";
---

<Layout 
  title="🛡️ Investigación Anti-Fraude Especializada | PDC [private detection & ciberintelligence]"
  description="Detección profesional de fraudes de seguros: análisis forense, evidencia digital y peritaje legal. Metodología científica certificada."
>
  <Header />
  <Breadcrumbs current="Investigación anti-fraude" />
  <ServiceHero 
    icon="⚖️"
    title="Investigación Anti-Fraude Especializada"
    description="<strong>Desenmascaramos fraudes millonarios</strong> con metodología científica.<br>🔬 <em>Análisis forense especializado</em> • ⚖️ <em>Evidencia con validez judicial</em>"
    iconLabel="Justicia y protección"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>