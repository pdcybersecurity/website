---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🌐 <strong>OSINT Avanzado:</strong> Investigación en surface web, deep web y fuentes especializadas con herramientas de grado militar",
  "🚨 <strong>Threat Intelligence:</strong> Detección proactiva de amenazas cibernéticas, análisis de vulnerabilidades y monitoreo de dark web",
  "🔍 <strong>Digital Forensics:</strong> Análisis forense de dispositivos, recuperación de datos y preservación de evidencia digital",
  "👁️ <strong>Cyber Surveillance:</strong> Monitoreo continuo de reputación digital, detección de ataques y contravigilancia cibernética",
  "📊 <strong>Cyber Threat Assessment:</strong> Informes de inteligencia cibernética con recomendaciones estratégicas de protección"
];

const description = "Nuestro equipo de ciberinteligencia está compuesto por ex-analistas de agencias gubernamentales y especialistas en seguridad cibernética con certificaciones internacionales. Empleamos herramientas de OSINT de grado militar y técnicas de análisis utilizadas por unidades de ciberguerra para anticipar, detectar y neutralizar amenazas en el espacio cibernético.";
---

<Layout 
  title="🚀 OSINT & Ciberinteligencia Militar | PDC [private detection & ciberintelligence]"
  description="Ciberinteligencia avanzada y OSINT: análisis de deep web, threat intelligence y digital forensics. Técnicas de agencias gubernamentales."
>
  <Header />
  <Breadcrumbs current="OSINT & ciberinteligencia militar" />
  <ServiceHero 
    icon="💻"
    title="OSINT & Ciberinteligencia Militar"
    description="<strong>Dominamos el espacio cibernético</strong> con técnicas de élite.<br>🌐 <em>OSINT de grado militar</em> • 🛡️ <em>Threat intelligence avanzada</em>"
    iconLabel="Ciberseguridad avanzada"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>