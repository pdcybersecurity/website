---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🌐 Investigación OSINT avanzada en fuentes abiertas y deep web especializada",
  "🚨 Detección proactiva de amenazas digitales y fugas de información crítica",
  "🔍 Análisis de riesgos y vulnerabilidades en entornos online complejos",
  "👁️ Vigilancia continua de reputación digital y ataques dirigidos",
  "📊 Reporte ejecutivo con recomendaciones estratégicas de protección"
];

const description = "Nuestros analistas de ciberinteligencia emplean tecnología de vanguardia e inteligencia artificial para anticipar riesgos digitales y protegerte en el mundo cibernético. Operamos en la frontera entre la legalidad y la innovación, siempre con total confidencialidad y ética profesional inquebrantable.";
---

<Layout 
  title="🚀 Ciberinteligencia Avanzada | PDC [private detection & ciberintelligence]"
  description="Ciberinteligencia de vanguardia y OSINT: análisis digital profundo, amenazas en la red profunda y protección cibernética integral."
>
  <Header />
  <Breadcrumbs current="Ciberinteligencia avanzada" />
  <ServiceHero 
    icon="💻"
    title="Ciberinteligencia Avanzada"
    description="<strong>Domina el mundo digital</strong> con tecnología de vanguardia.<br>🌐 <em>OSINT y análisis de deep web</em> • 🛡️ <em>Protección cibernética total</em>"
    iconLabel="Ciberseguridad avanzada"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>