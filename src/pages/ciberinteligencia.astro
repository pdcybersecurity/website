---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "Investigación OSINT en fuentes abiertas y deep web.",
  "Detección de amenazas digitales y fugas de información.",
  "Análisis de riesgos y vulnerabilidades en entornos online.",
  "Vigilancia de reputación digital y ataques dirigidos.",
  "Reporte ejecutivo con recomendaciones de protección."
];

const description = "Nuestros analistas emplean tecnología de vanguardia para anticipar riesgos y protegerte en el mundo digital, con total confidencialidad y ética profesional.";
---

<Layout 
  title="Ciberinteligencia avanzada | PDC [private detection & ciberintelligence]"
  description="Ciberinteligencia avanzada y OSINT: análisis digital, amenazas en la red profunda y protección integral."
>
  <Header />
  <Breadcrumbs current="Ciberinteligencia avanzada" />
  <ServiceHero 
    icon="&#128274;"
    title="Ciberinteligencia avanzada"
    description="Investigación digital, OSINT y análisis de amenazas en la red profunda.<br>Protección integral."
    iconLabel="Ciberseguridad"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>