---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "🌐 <strong>OSINT Avanzado:</strong> Investigación en surface web, deep web y fuentes especializadas con herramientas de alta tecnología",
  "🚨 <strong>Detección de Amenazas:</strong> Identificación proactiva de amenazas cibernéticas, análisis de vulnerabilidades y monitoreo continuo",
  "⚔️ <strong>Herramientas Ofensivas:</strong> Desarrollo de soluciones de penetración y testing de seguridad para empresas",
  "🛡️ <strong>Herramientas Defensivas:</strong> Sistemas de protección, monitoreo de amenazas y contramedidas cibernéticas",
  "📊 <strong>Análisis de Amenazas:</strong> Informes de inteligencia cibernética con recomendaciones estratégicas de protección"
];

const description = "Nuestro equipo de ciberinteligencia desarrolla herramientas ofensivas y defensivas de alta tecnología para empresas y particulares. Empleamos técnicas OSINT avanzadas y análisis especializado para anticipar, detectar y neutralizar amenazas en el espacio cibernético, ofreciendo soluciones personalizadas de seguridad digital.";
---

<Layout 
  title="🚀 Ciberinteligencia & OSINT Avanzado | PDC [private detection & ciberintelligence]"
  description="Ciberinteligencia avanzada y OSINT: desarrollo de herramientas ofensivas y defensivas, análisis de amenazas y protección cibernética integral."
>
  <Header />
  <Breadcrumbs current="Ciberinteligencia & OSINT" />
  <ServiceHero 
    icon="💻"
    title="Ciberinteligencia & OSINT Avanzado"
    description="<strong>Herramientas ofensivas y defensivas</strong> de alta tecnología.<br>🌐 <em>OSINT especializado</em> • 🛡️ <em>Protección cibernética integral</em>"
    iconLabel="Ciberseguridad avanzada"
    serviceClass="ciberinteligencia"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>