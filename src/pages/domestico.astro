---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👨‍👩‍👧‍👦 <strong>Investigación de Custodia:</strong> Documentación legal de conductas parentales, evaluación de riesgos y protección de menores",
  "📋 <strong>Recolección de Evidencia Legal:</strong> Vigilancia discreta, documentación fotográfica y testimonios verificables para procesos judiciales",
  "🔍 <strong>Localización de Familiares:</strong> Búsqueda especializada de personas desaparecidas, deudores alimentarios y familiares perdidos",
  "⚖️ <strong>Casos de Infidelidad:</strong> Investigación discreta con evidencia admisible para procesos de divorcio y separación",
  "🤝 <strong>Acompañamiento Especializado:</strong> Asesoría legal, apoyo emocional y coordinación con abogados especializados"
];

const description = "Nuestro departamento de casos familiares maneja situaciones delicadas con la máxima sensibilidad y profesionalismo. Empleamos técnicas de investigación adaptadas específicamente para entornos familiares, garantizando la protección de menores y la recolección de evidencia sólida que respalda decisiones judiciales críticas para el bienestar familiar.";
---

<Layout 
  title="👨‍👩‍👧‍👦 Investigación Familiar Especializada | PDC [private detection & ciberintelligence]"
  description="Casos familiares especializados: custodia, infidelidad y protección de menores. Investigación sensible con evidencia legal sólida."
>
  <Header />
  <Breadcrumbs current="Investigación familiar especializada" />
  <ServiceHero 
    icon="🏠"
    title="Investigación Familiar Especializada"
    description="<strong>Protege a tu familia con evidencia sólida</strong> y máxima sensibilidad.<br>👨‍👩‍👧‍👦 <em>Casos de custodia y protección</em> • 🤝 <em>Acompañamiento especializado</em>"
    iconLabel="Protección familiar"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>