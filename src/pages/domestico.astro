---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👨‍👩‍👧‍👦 Investigación especializada para casos de custodia y convivencia familiar",
  "📋 Documentación legal de conductas y situaciones de riesgo para menores",
  "🔍 Localización efectiva de familiares desaparecidos y deudores morosos",
  "⚖️ Recolección de pruebas sólidas para procesos legales y defensas jurídicas",
  "🤝 Acompañamiento personalizado y asesoría emocional durante el proceso"
];

const description = "Nuestro servicio de casos familiares está diseñado específicamente para proteger tus intereses y los de tu familia, actuando siempre con la máxima sensibilidad, discreción y profesionalismo. Entendemos que cada situación familiar es única y requiere un enfoque personalizado.";
---

<Layout 
  title="👨‍👩‍👧‍👦 Casos Familiares Especializados | PDC [private detection & ciberintelligence]"
  description="Casos domésticos especializados: resolución de conflictos familiares, custodia, convivencia y protección integral con máxima confidencialidad."
>
  <Header />
  <Breadcrumbs current="Casos domésticos" />
  <ServiceHero 
    icon="🏠"
    title="Casos Familiares Especializados"
    description="<strong>Protege lo que más amas</strong> con máxima sensibilidad.<br>👨‍👩‍👧‍👦 <em>Resolución de conflictos familiares</em> • 🤝 <em>Acompañamiento personalizado</em>"
    iconLabel="Protección familiar"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>