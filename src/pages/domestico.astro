---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ServiceHero from '../components/ServiceHero.astro';
import ServiceContent from '../components/ServiceContent.astro';
import Footer from '../components/Footer.astro';

const features = [
  "👨‍👩‍👧‍👦 <strong>Investigación de Custodia:</strong> Documentación legal de conductas parentales, evaluación de riesgos y protección de menores",
  "💔 <strong>Casos de Infidelidad:</strong> Investigación discreta con evidencia admisible para procesos de divorcio y separación",
  "🔍 <strong>Localización de Familiares:</strong> Búsqueda especializada de personas desaparecidas, deudores alimentarios y familiares perdidos",
  "👶 <strong>Cuidado y Protección de Hijos:</strong> Monitoreo de seguridad, verificación de cuidadores y análisis de entornos",
  "🤝 <strong>Acompañamiento Especializado:</strong> Asesoría legal, apoyo emocional y coordinación con abogados especializados"
];

const description = "Nuestro departamento de casos familiares maneja situaciones delicadas con la máxima sensibilidad y profesionalismo. Empleamos técnicas de investigación adaptadas específicamente para entornos familiares, garantizando la protección de menores y la recolección de evidencia sólida que respalda decisiones judiciales críticas.";
---

<Layout 
  title="👨‍👩‍👧‍👦 Casos Familiares Especializados | PDC [private detection & ciberintelligence]"
  description="Casos familiares especializados: custodia, infidelidad, cuidado de hijos y protección familiar. Investigación sensible con evidencia legal sólida."
>
  <Header />
  <Breadcrumbs current="Casos familiares" />
  <ServiceHero 
    icon="🏠"
    title="Casos Familiares Especializados"
    description="<strong>Protege lo que más amas</strong> con máxima sensibilidad.<br>👨‍👩‍👧‍👦 <em>Resolución de conflictos familiares</em> • 🤝 <em>Acompañamiento personalizado</em>"
    iconLabel="Protección familiar"
    serviceClass="domestico"
  />
  <ServiceContent features={features} description={description} />
  <Footer />
</Layout>