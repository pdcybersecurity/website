<style>
.premium-card {
  background: linear-gradient(135deg, var(--card) 0%, rgba(20, 20, 23, 0.9) 100%);
  padding: 40px 30px;
  border-radius: 25px;
  text-align: center;
  border: 2px solid var(--border);
  position: relative;
  transition: all 0.4s ease;
  overflow: hidden;
}

.premium-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(110, 122, 138, 0.1) 0%, transparent 50%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.premium-card:hover::before {
  opacity: 1;
}

.premium-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 30px 80px rgba(0,0,0,0.4);
  border: 2px solid var(--accent-light);
}

.premium-badge {
  position: absolute;
  top: 20px;
  right: 20px;
  background: linear-gradient(135deg, #ff6b6b 0%, #ffd93d 100%);
  color: var(--background);
  padding: 6px 12px;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.premium-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  filter: drop-shadow(0 0 15px rgba(255,255,255,0.3));
}

.premium-card h3 {
  color: var(--text);
  font-size: 1.5rem;
  margin-bottom: 15px;
  font-weight: 600;
}

.premium-card > p {
  color: var(--subtext);
  line-height: 1.6;
  margin-bottom: 25px;
}

.premium-features {
  list-style: none;
  padding: 0;
  margin: 0 0 25px 0;
  text-align: left;
}

.premium-features li {
  color: var(--subtext);
  padding: 8px 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
  font-size: 0.95rem;
}

.premium-price {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
  color: var(--background);
  padding: 12px 20px;
  border-radius: 20px;
  font-weight: 700;
  font-size: 1.1rem;
  margin-top: 20px;
}

.budget-calculator {
  background: linear-gradient(135deg, var(--surface-alt) 0%, rgba(24, 24, 24, 0.9) 100%);
  padding: 40px;
  border-radius: 25px;
  border: 2px solid var(--border);
  margin-top: 40px;
}

.calculator-form {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 25px;
  margin-bottom: 30px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  color: var(--accent-light);
  font-weight: 600;
  font-size: 1rem;
}

.form-group select {
  background: var(--card);
  border: 2px solid var(--border);
  color: var(--text);
  padding: 12px 15px;
  border-radius: 10px;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.form-group select:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(110, 122, 138, 0.2);
}

.budget-result {
  grid-column: 1 / -1;
  background: linear-gradient(135deg, rgba(110, 122, 138, 0.1) 0%, rgba(178, 187, 200, 0.05) 100%);
  padding: 30px;
  border-radius: 20px;
  border: 2px solid rgba(255,255,255,0.1);
  display: flex;
  align-items: center;
  gap: 20px;
  text-align: left;
}

.result-icon {
  font-size: 3rem;
  filter: drop-shadow(0 0 10px rgba(255,255,255,0.3));
}

.result-text h4 {
  color: var(--text);
  margin-bottom: 8px;
  font-size: 1.3rem;
}

.result-text p {
  color: var(--subtext);
  margin: 0;
  line-height: 1.5;
}

.budget-cta {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: linear-gradient(135deg, #28ca42 0%, #20a034 100%);
  color: white;
  padding: 15px 30px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.budget-cta:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0,0,0,0.4);
  background: linear-gradient(135deg, #20a034 0%, #28ca42 100%);
}

@media (max-width: 768px) {
  .premium-card {
    padding: 30px 20px;
  }
  
  .budget-calculator {
    padding: 25px 20px;
  }
  
  .calculator-form {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .budget-result {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
}
</style>

<script>
function calculateBudget() {
  const serviceType = document.getElementById('serviceType').value;
  const urgency = document.getElementById('urgency').value;
  const complexity = document.getElementById('complexity').value;
  const resultDiv = document.getElementById('budgetResult');
  
  if (!serviceType || !urgency || !complexity) {
    return;
  }
  
  // Base prices for each service
  const basePrices = {
    antecedentes: 800,
    localizacion: 1200,
    vigilancia: 2000,
    fraudes: 1500,
    corporativo: 2500,
    domestico: 1000,
    ciberinteligencia: 3000
  };
  
  // Multipliers
  const urgencyMultipliers = {
    standard: 1,
    priority: 1.3,
    urgent: 1.8,
    emergency: 2.5
  };
  
  const complexityMultipliers = {
    basic: 1,
    intermediate: 1.4,
    advanced: 1.8,
    expert: 2.2
  };
  
  const basePrice = basePrices[serviceType];
  const urgencyMultiplier = urgencyMultipliers[urgency];
  const complexityMultiplier = complexityMultipliers[complexity];
  
  const finalPrice = Math.round(basePrice * urgencyMultiplier * complexityMultiplier);
  const minPrice = Math.round(finalPrice * 0.8);
  const maxPrice = Math.round(finalPrice * 1.2);
  
  resultDiv.innerHTML = `
    <div class="result-icon">💰</div>
    <div class="result-text">
      <h4>Presupuesto Estimado</h4>
      <p style="font-size:1.2rem;color:var(--accent-light);font-weight:600;">
        $${minPrice.toLocaleString()} - $${maxPrice.toLocaleString()} USD
      </p>
      <p style="margin-top:8px;">
        Incluye: Investigación completa, evidencia digital, reporte ejecutivo y seguimiento post-entrega
      </p>
    </div>
  `;
}
</script>