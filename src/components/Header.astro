<style>
.topbar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(20px);
  padding: 25px 7vw;
  border-bottom: 1px solid var(--border);
  min-height: 80px;
  z-index: 101;
  position: sticky;
  top: 0;
  transition: all 0.3s ease;
}

.topbar-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  max-width: 1200px;
}

.topbar-agency {
  font-family: 'IBM Plex Sans', 'Segoe UI', Arial, sans-serif;
  font-weight: 400;
  font-size: 2rem;
  letter-spacing: 0.12em;
  color: var(--text);
  text-align: left;
  line-height: 1.2;
  text-shadow: 0 2px 8px rgba(21, 25, 34, 0.6);
  background: linear-gradient(135deg, #f5f6f8 0%, #b2bbc8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: flex;
  align-items: center;
  gap: 15px;
}

.topbar-agency span {
  font-size: 0.5em;
  font-weight: 300;
  letter-spacing: 0.08em;
  opacity: 0.9;
  text-transform: lowercase;
}

.topbar-nav {
  position: relative;
}

.nav-dropdown {
  position: relative;
}

.nav-toggle {
  background: linear-gradient(135deg, var(--surface) 0%, rgba(19, 19, 19, 0.8) 100%);
  border: 2px solid var(--border);
  color: var(--accent-light);
  padding: 12px 16px;
  border-radius: 12px;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.nav-toggle:hover {
  background: linear-gradient(135deg, var(--surface-alt) 0%, rgba(24, 24, 24, 0.9) 100%);
  border-color: var(--accent);
  color: var(--text);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.dropdown-menu {
  position: absolute;
  top: calc(100% + 15px);
  right: 0;
  background: linear-gradient(135deg, var(--surface) 0%, rgba(19, 19, 19, 0.95) 100%);
  border: 2px solid var(--border);
  border-radius: 20px;
  min-width: 380px;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(0,0,0,0.4);
  backdrop-filter: blur(20px);
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1000;
}

.dropdown-menu.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-header {
  padding: 20px 25px 15px;
  border-bottom: 1px solid var(--border);
  display: flex;
  align-items: center;
  gap: 12px;
  color: var(--accent-light);
  font-weight: 600;
  font-size: 1.1rem;
}

.dropdown-header i {
  font-size: 1.3rem;
  filter: drop-shadow(0 0 8px rgba(255,255,255,0.3));
}

.dropdown-section {
  padding: 15px 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}

.dropdown-section:last-of-type {
  border-bottom: none;
}

.section-title {
  padding: 8px 25px 12px;
  color: var(--accent);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.dropdown-item {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 12px 25px;
  color: var(--text);
  text-decoration: none;
  transition: all 0.3s ease;
  border-left: 3px solid transparent;
}

.dropdown-item:hover {
  background: rgba(255,255,255,0.05);
  border-left-color: var(--accent-light);
  color: var(--accent-light);
  transform: translateX(5px);
}

.dropdown-item i {
  font-size: 1.2rem;
  width: 20px;
  text-align: center;
  color: var(--accent);
  transition: all 0.3s ease;
}

.dropdown-item:hover i {
  color: var(--accent-light);
  transform: scale(1.1);
}

.dropdown-item div {
  flex: 1;
}

.dropdown-item span {
  display: block;
  font-weight: 500;
  font-size: 1rem;
  margin-bottom: 2px;
}

.dropdown-item small {
  display: block;
  color: var(--subtext);
  font-size: 0.85rem;
  opacity: 0.8;
}

.dropdown-footer {
  padding: 20px 25px;
  border-top: 1px solid var(--border);
  background: rgba(255,255,255,0.02);
}

.dropdown-cta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  color: white;
  padding: 12px 20px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.dropdown-cta:hover {
  background: linear-gradient(135deg, #128C7E 0%, #25D366 100%);
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(0,0,0,0.4);
}

/* Scrollbar personalizado para el menú */
.dropdown-menu::-webkit-scrollbar {
  width: 6px;
}

.dropdown-menu::-webkit-scrollbar-track {
  background: transparent;
}

.dropdown-menu::-webkit-scrollbar-thumb {
  background: var(--border);
  border-radius: 3px;
}

.dropdown-menu::-webkit-scrollbar-thumb:hover {
  background: var(--accent);
}

@media (max-width: 768px) {
  .topbar {
    padding: 20px 4vw;
    min-height: 70px;
  }
  
  .topbar-agency {
    font-size: 1.6rem;
    letter-spacing: 0.1em;
  }
  
  .topbar-agency span {
    font-size: 0.65em;
  }
  
  .dropdown-menu {
    min-width: 320px;
    right: -20px;
  }
  
  .dropdown-item {
    padding: 10px 20px;
  }
  
  .dropdown-header,
  .dropdown-footer {
    padding: 15px 20px;
  }
}

@media (max-width: 480px) {
  .topbar {
    padding: 18px 3vw;
    min-height: 65px;
  }
  
  .topbar-container {
    flex-direction: column;
    gap: 10px;
    align-items: flex-start;
  }
  
  .topbar-agency {
    font-size: 1.4rem;
    letter-spacing: 0.08em;
    flex-direction: column;
    gap: 5px;
    align-items: flex-start;
  }
  
  .topbar-nav {
    align-self: flex-end;
  }
  
  .dropdown-menu {
    min-width: 280px;
    right: 0;
  }
  
  .nav-toggle {
    padding: 10px 14px;
    font-size: 1.1rem;
  }
}
</style>

<script>
function toggleMenu() {
  const menu = document.getElementById('dropdownMenu');
  const isActive = menu.classList.contains('active');
  
  if (isActive) {
    menu.classList.remove('active');
    document.removeEventListener('click', closeMenuOnOutsideClick);
  } else {
    menu.classList.add('active');
    // Agregar listener para cerrar al hacer clic fuera
    setTimeout(() => {
      document.addEventListener('click', closeMenuOnOutsideClick);
    }, 100);
  }
}

function closeMenuOnOutsideClick(event) {
  const menu = document.getElementById('dropdownMenu');
  const toggle = document.querySelector('.nav-toggle');
  
  if (!menu.contains(event.target) && !toggle.contains(event.target)) {
    menu.classList.remove('active');
    document.removeEventListener('click', closeMenuOnOutsideClick);
  }
}

// Cerrar menú al hacer clic en un enlace
document.addEventListener('DOMContentLoaded', function() {
  const menuItems = document.querySelectorAll('.dropdown-item');
  menuItems.forEach(item => {
    item.addEventListener('click', function() {
      const menu = document.getElementById('dropdownMenu');
      menu.classList.remove('active');
      document.removeEventListener('click', closeMenuOnOutsideClick);
    });
  });
});

// Cerrar menú con tecla Escape
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    const menu = document.getElementById('dropdownMenu');
    if (menu.classList.contains('active')) {
      menu.classList.remove('active');
      document.removeEventListener('click', closeMenuOnOutsideClick);
    }
  }
});
</script>