<header class="topbar" role="banner">
  <div class="topbar-container">
    <div class="topbar-agency">
      PDC <span>[private detection & ciberintelligence]</span>
    </div>
  </div>
</header>

<style>
.topbar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(20px);
  padding: 25px 7vw;
  border-bottom: 1px solid var(--border);
  min-height: 80px;
  z-index: 101;
  position: sticky;
  top: 0;
  transition: all 0.3s ease;
}

.topbar-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 1200px;
}

.topbar-agency {
  font-family: 'IBM Plex Sans', 'Segoe UI', Arial, sans-serif;
  font-weight: 400;
  font-size: 2rem;
  letter-spacing: 0.12em;
  color: var(--text);
  text-align: center;
  line-height: 1.2;
  text-shadow: 0 2px 8px rgba(21, 25, 34, 0.6);
  background: linear-gradient(135deg, #f5f6f8 0%, #b2bbc8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 5px;
}

.topbar-agency span {
  font-size: 0.5em;
  font-weight: 300;
  letter-spacing: 0.08em;
  opacity: 0.9;
  text-transform: lowercase;
}

@media (max-width: 768px) {
  .topbar {
    padding: 20px 4vw;
    min-height: 70px;
  }
  
  .topbar-agency {
    font-size: 1.6rem;
    letter-spacing: 0.1em;
  }
  
  .topbar-agency span {
    font-size: 0.65em;
  }
}

@media (max-width: 480px) {
  .topbar {
    padding: 18px 3vw;
    min-height: 65px;
  }
  
  .topbar-agency {
    font-size: 1.4rem;
    letter-spacing: 0.08em;
  }
}
</style>