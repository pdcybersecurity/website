<style>
.generator-form {
  background: linear-gradient(135deg, var(--card) 0%, rgba(20, 20, 23, 0.9) 100%);
  padding: 40px;
  border-radius: 25px;
  border: 2px solid var(--border);
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25px;
  margin-bottom: 25px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  color: var(--accent-light);
  font-weight: 600;
  font-size: 1rem;
}

.form-group label i {
  margin-right: 8px;
  width: 16px;
}

.form-group select,
.form-group textarea {
  background: var(--surface);
  border: 2px solid var(--border);
  color: var(--text);
  padding: 12px 15px;
  border-radius: 12px;
  font-size: 1rem;
  transition: all 0.3s ease;
  font-family: inherit;
}

.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(110, 122, 138, 0.2);
}

.form-group textarea {
  resize: vertical;
  min-height: 100px;
  line-height: 1.5;
}

.generated-message {
  background: linear-gradient(135deg, rgba(110, 122, 138, 0.1) 0%, rgba(178, 187, 200, 0.05) 100%);
  padding: 25px;
  border-radius: 20px;
  border: 2px solid rgba(255,255,255,0.1);
  display: flex;
  align-items: flex-start;
  gap: 20px;
  margin-top: 30px;
  min-height: 120px;
  transition: all 0.3s ease;
}

.message-icon {
  font-size: 2.5rem;
  color: var(--accent-light);
  filter: drop-shadow(0 0 10px rgba(255,255,255,0.3));
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.message-content h4 {
  color: var(--text);
  margin-bottom: 10px;
  font-size: 1.3rem;
  font-weight: 600;
}

.message-content p {
  color: var(--subtext);
  margin: 0;
  line-height: 1.6;
  white-space: pre-wrap;
}

.message-cta {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  color: white;
  padding: 15px 30px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.message-cta:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0,0,0,0.4);
  background: linear-gradient(135deg, #128C7E 0%, #25D366 100%);
  color: white;
}

.copy-btn {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
  color: var(--background);
  border: none;
  padding: 15px 25px;
  border-radius: 25px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.copy-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0,0,0,0.4);
  background: linear-gradient(135deg, var(--accent-light) 0%, #ffffff 100%);
}

@media (max-width: 768px) {
  .generator-form {
    padding: 25px 20px;
  }
  
  .form-row {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .generated-message {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .message-cta,
  .copy-btn {
    width: 100%;
    margin: 5px 0;
  }
}
</style>

<script>
let generatedMessageText = '';

function generateMessage() {
  const serviceType = document.getElementById('serviceType').value;
  const urgency = document.getElementById('urgency').value;
  const complexity = document.getElementById('complexity').value;
  const location = document.getElementById('location').value;
  const additionalDetails = document.getElementById('additionalDetails').value;
  const resultDiv = document.getElementById('generatedMessage');
  
  if (!serviceType || !urgency || !complexity || !location) {
    resultDiv.innerHTML = `
      <div class="message-icon"><i class="fas fa-exclamation-triangle"></i></div>
      <div class="message-content">
        <h4>Completa todos los campos</h4>
        <p>Por favor selecciona todas las opciones para generar tu mensaje personalizado</p>
      </div>
    `;
    return;
  }
  
  // Service descriptions
  const services = {
    antecedentes: 'Verificaci√≥n de Antecedentes',
    localizacion: 'Localizaci√≥n de Personas',
    vigilancia: 'Vigilancia Especializada',
    fraudes: 'Investigaci√≥n Anti-Fraude',
    corporativo: 'Protecci√≥n Corporativa',
    domestico: 'Casos Familiares',
    ciberinteligencia: 'Ciberinteligencia & OSINT'
  };
  
  const urgencyTexts = {
    standard: 'tiempo est√°ndar (5-7 d√≠as)',
    priority: 'car√°cter prioritario (2-3 d√≠as)',
    urgent: 'm√°xima urgencia (24-48 horas)',
    emergency: 'emergencia inmediata'
  };
  
  const complexityTexts = {
    basic: 'complejidad b√°sica',
    intermediate: 'complejidad intermedia con an√°lisis especializado',
    advanced: 'alta complejidad con t√©cnicas avanzadas',
    expert: 'm√°xima complejidad con metodolog√≠a experta'
  };
  
  const locationTexts = {
    local: '√°mbito local/nacional',
    international: '√°mbito internacional',
    multiple: 'm√∫ltiples pa√≠ses',
    unknown: 'ubicaci√≥n por determinar'
  };
  
  // Generate personalized message
  let message = `üîí CONSULTA CONFIDENCIAL - PDC\n\n`;
  message += `Hola, necesito contratar sus servicios de ${services[serviceType]}.\n\n`;
  message += `üìã DETALLES DEL CASO:\n`;
  message += `‚Ä¢ Servicio: ${services[serviceType]}\n`;
  message += `‚Ä¢ Urgencia: ${urgencyTexts[urgency]}\n`;
  message += `‚Ä¢ Complejidad: ${complexityTexts[complexity]}\n`;
  message += `‚Ä¢ Ubicaci√≥n: ${locationTexts[location]}\n\n`;
  
  if (additionalDetails.trim()) {
    message += `üìù INFORMACI√ìN ADICIONAL:\n${additionalDetails.trim()}\n\n`;
  }
  
  message += `üéØ SOLICITO:\n`;
  message += `‚Ä¢ Cotizaci√≥n detallada del servicio\n`;
  message += `‚Ä¢ Tiempo estimado de resoluci√≥n\n`;
  message += `‚Ä¢ Metodolog√≠a a utilizar\n`;
  message += `‚Ä¢ Siguiente paso para iniciar\n\n`;
  message += `‚ö° Disponible para llamada inmediata si es necesario.\n\n`;
  message += `Gracias por su profesionalismo y discreci√≥n.`;
  
  generatedMessageText = message;
  
  resultDiv.innerHTML = `
    <div class="message-icon"><i class="fas fa-check-circle"></i></div>
    <div class="message-content">
      <h4>Mensaje Personalizado Generado</h4>
      <p>${message}</p>
    </div>
  `;
  
  // Update WhatsApp link
  const whatsappLink = document.getElementById('whatsappLink');
  const encodedMessage = encodeURIComponent(message);
  whatsappLink.href = `https://wa.me/529844183372?text=${encodedMessage}`;
  
  // Enable buttons
  whatsappLink.style.opacity = '1';
  whatsappLink.style.pointerEvents = 'auto';
  document.querySelector('.copy-btn').style.opacity = '1';
  document.querySelector('.copy-btn').style.pointerEvents = 'auto';
}

function sendToWhatsApp() {
  if (!generatedMessageText) {
    alert('Por favor completa todos los campos para generar el mensaje');
    return false;
  }
  
  const encodedMessage = encodeURIComponent(generatedMessageText);
  window.open(`https://wa.me/529844183372?text=${encodedMessage}`, '_blank');
  return false;
}

function copyMessage() {
  if (!generatedMessageText) {
    alert('Por favor completa todos los campos para generar el mensaje');
    return;
  }
  
  navigator.clipboard.writeText(generatedMessageText).then(() => {
    const btn = event.target;
    const originalText = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-check"></i> COPIADO';
    btn.style.background = 'linear-gradient(135deg, #28ca42 0%, #20a034 100%)';
    
    setTimeout(() => {
      btn.innerHTML = originalText;
      btn.style.background = 'linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%)';
    }, 2000);
  }).catch(() => {
    // Fallback for older browsers
    const textArea = document.createElement('textarea');
    textArea.value = generatedMessageText;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand('copy');
    document.body.removeChild(textArea);
    
    alert('Mensaje copiado al portapapeles');
  });
}

// Initialize buttons as disabled
document.addEventListener('DOMContentLoaded', function() {
  const whatsappLink = document.getElementById('whatsappLink');
  const copyBtn = document.querySelector('.copy-btn');
  
  if (whatsappLink) {
    whatsappLink.style.opacity = '0.5';
    whatsappLink.style.pointerEvents = 'none';
  }
  
  if (copyBtn) {
    copyBtn.style.opacity = '0.5';
    copyBtn.style.pointerEvents = 'none';
  }
});
</script>