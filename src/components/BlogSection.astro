<style>
.blog-card {
  background: linear-gradient(135deg, var(--card) 0%, rgba(20, 20, 23, 0.8) 100%);
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid var(--border);
  transition: all 0.4s ease;
  position: relative;
}

.blog-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 25px 60px rgba(0,0,0,0.3);
  border: 2px solid var(--accent);
}

.blog-image {
  position: relative;
  overflow: hidden;
}

.blog-category {
  position: absolute;
  top: 15px;
  left: 15px;
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
  color: var(--background);
  padding: 6px 12px;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 700;
  z-index: 2;
}

.blog-content {
  padding: 30px 25px;
}

.blog-content h3 {
  color: var(--text);
  font-size: 1.3rem;
  margin-bottom: 15px;
  font-weight: 600;
  line-height: 1.3;
}

.blog-content p {
  color: var(--subtext);
  line-height: 1.6;
  margin-bottom: 20px;
}

.blog-meta {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
  font-size: 0.9rem;
  color: var(--accent);
}

.blog-link {
  color: var(--accent-light);
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.blog-link:hover {
  color: #fff;
  transform: translateX(5px);
}

.newsletter-section {
  background: linear-gradient(135deg, var(--surface) 0%, rgba(19, 19, 19, 0.8) 100%);
  padding: 40px;
  border-radius: 25px;
  border: 2px solid var(--border);
  margin: 60px 0;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.newsletter-content h3 {
  color: var(--accent-light);
  font-size: 1.8rem;
  margin-bottom: 15px;
  font-weight: 600;
}

.newsletter-content p {
  color: var(--subtext);
  line-height: 1.6;
  margin-bottom: 25px;
}

.newsletter-form {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}

.newsletter-form input {
  flex: 1;
  background: var(--card);
  border: 2px solid var(--border);
  color: var(--text);
  padding: 12px 15px;
  border-radius: 10px;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.newsletter-form input:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(110, 122, 138, 0.2);
}

.newsletter-btn {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
  color: var(--background);
  border: none;
  padding: 12px 20px;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.newsletter-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.3);
}

.newsletter-benefits h4 {
  color: var(--text);
  margin-bottom: 20px;
  font-size: 1.2rem;
}

.newsletter-benefits ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.newsletter-benefits li {
  color: var(--subtext);
  padding: 8px 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
  font-size: 0.95rem;
}

.webinars-section {
  background: rgba(255,255,255,0.02);
  padding: 40px;
  border-radius: 20px;
  border: 1px solid rgba(255,255,255,0.1);
}

.webinar-card {
  background: var(--card);
  padding: 25px;
  border-radius: 15px;
  border: 1px solid var(--border);
  display: flex;
  gap: 20px;
  align-items: center;
  transition: all 0.3s ease;
}

.webinar-card:hover {
  background: var(--surface);
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0,0,0,0.2);
}

.webinar-date {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
  color: var(--background);
  padding: 15px;
  border-radius: 15px;
  text-align: center;
  min-width: 70px;
}

.date-day {
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1;
}

.date-month {
  font-size: 0.9rem;
  font-weight: 600;
  margin-top: 2px;
}

.webinar-info h4 {
  color: var(--text);
  margin-bottom: 8px;
  font-size: 1.1rem;
  font-weight: 600;
}

.webinar-info p {
  color: var(--subtext);
  margin-bottom: 15px;
  font-size: 0.9rem;
}

.webinar-register {
  background: rgba(255,255,255,0.1);
  color: var(--accent-light);
  padding: 8px 15px;
  border-radius: 20px;
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 600;
  transition: all 0.3s ease;
  display: inline-block;
}

.webinar-register:hover {
  background: var(--accent);
  color: var(--background);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .newsletter-section {
    grid-template-columns: 1fr;
    gap: 30px;
    padding: 30px 20px;
  }
  
  .newsletter-form {
    flex-direction: column;
    gap: 10px;
  }
  
  .webinar-card {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .blog-content {
    padding: 25px 20px;
  }
}
</style>

<script>
function subscribeNewsletter() {
  const email = document.getElementById('newsletterEmail').value;
  if (!email) {
    alert('Por favor ingresa tu email');
    return;
  }
  
  if (!email.includes('@')) {
    alert('Por favor ingresa un email válido');
    return;
  }
  
  // Simulate subscription
  alert('¡Gracias! Te has suscrito exitosamente al newsletter de PDC. Recibirás tu primer boletín la próxima semana.');
  document.getElementById('newsletterEmail').value = '';
}
</script>