---
export interface Props {
  icon: string;
  title: string;
  description: string;
  iconLabel: string;
  serviceClass?: string;
}

const { icon, title, description, iconLabel, serviceClass = '' } = Astro.props;
---

<section class={`hero ${serviceClass}`} style="min-height: 60vh;">
  <div class="hero-content" style="text-align:center;max-width:700px;padding:60px 0 40px 0;">
    <div class="icon nf-icon" aria-label={iconLabel} style="font-size:4rem;margin-bottom:20px;text-shadow:0 0 20px rgba(255,255,255,0.5);filter:drop-shadow(0 0 15px rgba(255,255,255,0.3));">{icon}</div>
    <h1 style="margin-bottom:15px;font-size:2.8rem;">{title}</h1>
    <p style="font-size:1.25rem;color:var(--subtext);line-height:1.6;" set:html={description}></p>
  </div>
</section>

<style>
.nf-icon {
  font-family: 'Nerd Fonts', 'Font Awesome 6 Free', 'Font Awesome 6 Brands', monospace;
  font-weight: 900;
}
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/ryanoasis/nerd-fonts@master/css/nerd-fonts-generated.css">