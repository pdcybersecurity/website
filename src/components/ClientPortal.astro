  gap: 8px;
}

.portal-dots span {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  display: block;
}

.portal-content {
  display: flex;
  min-height: 350px;
}

.portal-nav {
  background: var(--surface-alt);
  width: 120px;
  padding: 20px 0;
  border-right: 1px solid var(--border);
  flex-shrink: 0;
}

.nav-item {
  padding: 12px 20px;
  font-size: 0.85rem;
  color: var(--subtext);
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.nav-item.active {
  background: var(--accent);
  color: var(--background);
  font-weight: 600;
}

.nav-item:hover:not(.active) {
  background: rgba(255,255,255,0.05);
