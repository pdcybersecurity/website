                <div class="demo-report-info">
                  <div class="demo-report-name">Análisis de Redes Sociales</div>
                  <div class="demo-report-date">17 Enero 2025 - 09:15</div>
                </div>
                <div class="demo-report-status">Disponible</div>
              </div>
              <div class="demo-report-item">
                <div class="demo-report-icon"><i class="fas fa-clock"></i></div>
                <div class="demo-report-info">
                  <div class="demo-report-name">Verificación de Campo</div>
                  <div class="demo-report-date">En proceso...</div>
                </div>
