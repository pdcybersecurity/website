<style>
  color: var(--background);
}

.payment-btn.secondary {
  background: var(--card);
  color: var(--text);
  border: 1px solid var(--border);
}

.payment-history h5 {
  color: var(--accent-light);
  margin-bottom: 20px;
  font-size: 1.2rem;
}

.payment-item {
  background: var(--card);
  padding: 15px 20px;
  border-radius: 10px;
  display: grid;
  grid-template-columns: 1fr auto auto;
  gap: 20px;
  align-items: center;
  margin-bottom: 10px;
  border: 1px solid var(--border);
}

.payment-concept {
  color: var(--text);
  font-weight: 500;
}

.payment-amount {
  color: var(--accent-light);
  font-weight: 600;
}

.payment-status {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
}

.payment-status.paid {
  background: #28ca42;
  color: white;
}

.payment-status.pending {
  background: #ff9500;
  color: white;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .portal-container {
    gap: 40px;
  }
  
  .portal-nav {
    width: 100px;
  }
  
  .nav-item {
    font-size: 0.8rem;
    padding: 10px 15px;
  }
}

@media (max-width: 768px) {
  .portal-container {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .portal-content {
    flex-direction: column;
  }
  
  .portal-nav {
    width: 100%;
    display: flex;
    overflow-x: auto;
    padding: 15px 0;
    border-right: none;
    border-bottom: 1px solid var(--border);
  }
  
  .nav-item {
    white-space: nowrap;
    padding: 10px 15px;
    flex-shrink: 0;
  }
  
  .feature-item {
    gap: 15px;
  }
  
  .feature-icon {
    font-size: 2rem;
  }
  
  .portal-main {
    padding: 20px;
  }
  
  .demo-modal-content {
    width: 95%;
    height: 90%;
  }
  
  .demo-portal-full {
    flex-direction: column;
  }
  
  .demo-nav {
    width: 100%;
    display: flex;
    overflow-x: auto;
    padding: 10px 0;
  }
  
  .demo-nav-item {
    white-space: nowrap;
    padding: 10px 15px;
    border-left: none;
    border-bottom: 3px solid transparent;
  }
  
  .demo-nav-item.active {
    border-bottom-color: var(--accent-light);
  }
  
  .payment-summary {
    grid-template-columns: 1fr;
  }
  
  .payment-actions {
    flex-direction: column;
  }
  
  .case-item {
    flex-direction: column;
    gap: 15px;
    align-items: flex-start;
  }
  
  .case-actions {
    width: 100%;
    justify-content: space-between;
  }
}

@media (max-width: 480px) {
  .portal-window {
    margin: 0 -10px;
  }
  
  .portal-main {
    padding: 15px;
  }
  
  .case-details {
    padding: 10px;
  }
  
  .detail-item {
    flex-direction: column;
    gap: 5px;
  }
  
  .feature-item {
    flex-direction: column;
    text-align: center;
    gap: 10px;
  }
  
  .portal-demo, .auth-container {
    padding: 20px 15px;
  }
  
  .demo-stats {
    grid-template-columns: 1fr;
  }
  
  .demo-content {
    padding: 20px;
  }
  
  .payment-item {
    grid-template-columns: 1fr;
    gap: 10px;
    text-align: center;
  }
}
</style>

<script>
function openPortalDemo() {
  document.getElementById('portalDemoModal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function closePortalDemo() {
  document.getElementById('portalDemoModal').style.display = 'none';
  document.body.style.overflow = 'auto';
}

function showDemoSection(sectionName) {
  // Get the event from the global event object or create a synthetic one
  const clickedElement = event ? event.target : document.querySelector('.demo-nav-item.active');
  
  // Hide all sections
  document.querySelectorAll('.demo-section').forEach(section => {
    section.classList.remove('active');
  });
  
  // Remove active class from all nav items
  document.querySelectorAll('.demo-nav-item').forEach(item => {
    item.classList.remove('active');
  });
  
  // Show selected section
  const targetSection = document.getElementById(`demo-${sectionName}`);
  if (targetSection) {
    targetSection.classList.add('active');
  }
  
  // Add active class to clicked nav item
  if (clickedElement && clickedElement.classList) {
    clickedElement.classList.add('active');
  }
}

function showAuthForm(formType) {
  // Get the event from the global event object or create a synthetic one
  const clickedElement = event ? event.target : document.querySelector('.auth-tab.active');
  
  // Hide all forms
  document.querySelectorAll('.auth-form').forEach(form => {
    form.classList.remove('active');
  });
  
  // Remove active class from all tabs
  document.querySelectorAll('.auth-tab').forEach(tab => {
    tab.classList.remove('active');
  });
  
  // Show selected form
  const targetForm = document.getElementById(`${formType}Form`);
  if (targetForm) {
    targetForm.classList.add('active');
  }
  
  // Add active class to clicked tab
  if (clickedElement && clickedElement.classList) {
    clickedElement.classList.add('active');
  }
}

