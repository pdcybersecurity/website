        response = "Entendido. Con esa informaci√≥n puedo preparar una cotizaci√≥n. ¬øCu√°l es tu email para enviarte la propuesta detallada?";
        currentStep = 'contact_pricing';
        break;
        
      case 'specialist':
        userData.caseType = message;
        response = "Perfecto. ¬øCu√°l es tu nombre y email para que nuestro especialista te contacte en las pr√≥ximas 2 horas?";
        currentStep = 'contact_specialist';
        break;
        
      case 'contact_urgent':
      case 'contact_pricing':
      case 'contact_specialist':
      case 'service_details':
        userData.contactInfo = message;
        sendToTelegram();
        response = "¬°Excelente! He enviado toda tu informaci√≥n a nuestro equipo.\n\n‚úÖ Recibir√°s respuesta en menos de 5 minutos\nüîí Toda la informaci√≥n es confidencial\nüì± Tambi√©n puedes contactarnos directamente:\n\n‚Ä¢ Telegram: @pdc_agency";
        currentStep = 'completed';
        break;
        
      default:
        response = "Gracias por tu mensaje. ¬øEn qu√© m√°s puedo ayudarte?";
    }
    
    addMessage(response, 'bot');
  }, 1000);
}

function sendToTelegram() {
  // Preparar mensaje para Telegram
  let telegramMessage = `üîí NUEVA CONSULTA - PDC\n\n`;
  telegramMessage += `üìã Tipo: ${userData.type}\n`;
  telegramMessage += `üìù Informaci√≥n:\n${JSON.stringify(userData, null, 2)}\n\n`;
  telegramMessage += `‚è∞ Fecha: ${new Date().toLocaleString('es-ES')}\n`;
  telegramMessage += `üåê Origen: Chat Web`;
  
  // Enviar a Telegram (simulado - en producci√≥n usar√≠as la API de Telegram)
  console.log('Enviando a Telegram:', telegramMessage);
  
  // Tambi√©n podr√≠as enviar por email usando un servicio como EmailJS
  // o hacer una llamada a tu backend para procesar la informaci√≥n
}

function addMessage(text, sender) {
  const messagesContainer = document.getElementById('chatMessages');
  const messageDiv = document.createElement('div');
  messageDiv.className = `message ${sender}-message`;
  
  const now = new Date();
  const timeString = now.toLocaleTimeString('es-ES', { 
    hour: '2-digit', 
    minute: '2-digit' 
  });
  
  const avatar = sender === 'user' ? '<i class="fas fa-user"></i>' : '<i class="fas fa-robot"></i>';
  
  messageDiv.innerHTML = `
    <div class="message-avatar">${avatar}</div>
    <div class="message-content">
      <p>${text}</p>
      <div class="message-time">${timeString}</div>
    </div>
  `;
  
  messagesContainer.appendChild(messageDiv);
  messagesContainer.scrollTop = messagesContainer.scrollHeight;
  
  // Show notification if chat is closed
  if (!chatOpen && sender === 'bot') {
    const notification = document.getElementById('chatNotification');
    messageCount++;
    notification.textContent = messageCount;
    notification.style.display = 'flex';
  }
}

function handleChatKeyPress(event) {
  if (event.key === 'Enter') {
    sendMessage();
  }
}
