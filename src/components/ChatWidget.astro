}

function sendMessage() {
  const input = document.getElementById('chatInput');
  const message = input.value.trim();
  
  if (!message) return;
  
  addMessage(message, 'user');
  input.value = '';
  
  // Procesar respuesta seg√∫n el paso actual
  processUserResponse(message);
}

function processUserResponse(message) {
  userData.lastMessage = message;
  
  setTimeout(() => {
    let response = '';
    
    switch(currentStep) {
      case 'urgent':
        userData.situation = message;
        response = "Gracias por la informaci√≥n. He registrado tu caso como urgente.\n\n¬øCu√°l es tu nombre y n√∫mero de contacto para que nuestro equipo te llame inmediatamente?";
